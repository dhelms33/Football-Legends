<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomNavigation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_primary50</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_primary40</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_primary80</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Project01" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- This is the base theme for the Project01 theme. -->
    </style>

    <style name="Theme.Project01" parent="Base.Theme.Project01">
        <!-- Project01 theme -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="header" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- Header style -->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="edit_text_login">
        <!-- EditText style for login -->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="button">
        <!-- Button style -->
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="page">
        <!-- Page style -->
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme attributes here -->
    </style>
    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your dark theme attributes here -->
<!--        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>-->
<!--        <item name="colorAccent">@color/colorAccentDarkTheme</item>-->
        <!-- Add more dark theme attributes here -->
    </style>



</resources>
